<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding">

    <EditText
        android:id="@+id/etTestCode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:hint="@string/label_testcode"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress|textCapCharacters"
        android:singleLine="true"
        android:textSize="@dimen/label_size" />

    <EditText
        android:id="@+id/etServerIp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:hint="@string/serverip"
        android:imeOptions="actionGo"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:text="158.108.34.49"
        android:textSize="@dimen/label_size" />

    <Button
        android:id="@+id/btLogin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin"
        android:text="@string/label_login"
        android:textSize="@dimen/label_size" />

    <TextView
        android:id="@+id/tvCurrentTestCode"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/input_test_code"
        android:textSize="@dimen/label_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:gravity="center"
        android:text="@string/version"
        android:textStyle="italic"
        android:textSize="@dimen/label_size" />

</LinearLayout>